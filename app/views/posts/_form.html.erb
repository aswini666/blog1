<%= form_with(model: @post) do |f| %>
  <div class="field">
    <%= f.label :Title %>
     <%= f.text_field :title %>
   </div>
   
   <div class="field">
    <%= f.label :Description %>
     <%= f.text_area :description %>
   </div>

   <div class="field">
    <%= f.submit "Submit" %>
   </div>
<% end %>